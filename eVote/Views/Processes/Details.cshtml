@model org.oas.cidh.eVote.Models.VoteProcess

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Nav tabs -->
<ul class="nav nav-tabs nav-justified  light-blue darken-3 mx-0" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" href="@Url.Action("Index", "Processes")" ><i class="fa fa-calendar-check-o"></i> Pending</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Index", "Processes")" role="tab"><i class="fa fa-edit"></i> In Progress</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Index", "Processes")" role="tab"><i class="fa  fa-window-close-o"></i> Closed</a>
    </li>
</ul>

<div class="container">
    <div class="tab-content">
        <div id="pending" role="tabpanel">

            <h1 class="card-title pt-5 font-bold"><strong>@Model.Category.Name</strong></h1> @*flex-center*@

            <!-- Info row -->
            <div class="white z-depth-2 mb-4">

                <div class="row text-center pt-5">
                    <div class="col">
                        <i class="fa fa-5x fa-envelope-open indigo-text pb-2"></i><br />
                        <span class="font-weight-bold">Status:</span> Open
                    </div>
                    <div class="col">
                        <i class="fa fa-5x fa-exclamation-triangle orange-text pb-2"></i><br />
                        <span class="font-weight-bold">Deadline:</span> 01/01/2018
                    </div>
                    <div class="col">
                        <a href="@Url.Action("Vote", "Processes")" alt="Vote">
                            <i class="fa fa-5x fa-calendar-check-o green-text pb-2" aria-hidden="true"></i><br />
                            <span class="font-weight-bold">Vote now!</span>
                        </a>
                    </div>
                    <div class="col pb-4">
                        <a href="@Url.Action("Docs", "Processes")" alt="Docs">
                            <i class="fa fa-5x fa-file blue-grey-text pb-2"></i><br />
                            <span class="font-weight-bold">Docs</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card deck -->
            <div class="card-deck">

                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title"><strong>Votes collected</strong></h5>
                        <table class="table table-hover card-text">
                            <tbody>
                                <tr>
                                    <td><img src="~/Content/img/flags/GR.gif" style="border-radius: 0 0 0 0;" /></td>
                                    <td><i class="fa fa-check green-text"></i></td>
                                    <td>Commissioner 1</td>
                                </tr>
                                <tr>
                                    <td><img src="~/Content/img/flags/CR.gif" style="border-radius: 0 0 0 0;" /></td>
                                    <td><i class="fa fa-close red-text"></i></td>
                                    <td>Commissioner 2</td>
                                </tr>
                                <tr>
                                    <td><img src="~/Content/img/flags/GY.gif" style="border-radius: 0 0 0 0;" /></td>
                                    <td><i class="fa fa-check green-text"></i></td>
                                    <td>Commissioner 3</td>
                                </tr>
                                <tr>
                                    <td><img src="~/Content/img/flags/NI.gif" style="border-radius: 0 0 0 0;" /></td>
                                    <td><i class="fa fa-close red-text"></i></td>
                                    <td>Commissioner 4</td>
                                </tr>
                                <tr>
                                    <td><img src="~/Content/img/flags/RD.gif" style="border-radius: 0 0 0 0;" /></td>
                                    <td><i class="fa fa-check green-text"></i></td>
                                    <td>Commissioner 5</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title"><strong>Progress</strong></h5><br />
                        <div class="progress" style="height: 20px">
                            <div class="progress-bar" role="progressbar" style="width: 75%; height: 20px" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
                        </div>
                        <text class="pull-left">Started on: 01/01/2018</text><text class="pull-right">Ending on: 01/10/2018</text>
                        <br /><br />
                        <h5 class="card-title mt-4"><strong>Countries</strong></h5><br />
                        <div class="row">
                            @foreach (var p in Model.Countries)
                            {
                                <div class="col text-center">
                                    <img src="@p.ImgURL" style="border-radius: 0 0 0 0;" /><br />
                                    @p.Name
                                </div>
                            }
                        </div>
                    </div>
                </div>

            </div>

            <!-- Comments -->
            <div class="white z-depth-2">
                <div class="container">
                    <h2 class="pt-4 text-center">Comments <span class="badge blue">3</span></h2>
                    <div class="row pt-4">
                        <div class="col-2">
                            <img class="avatar rounded-circle z-depth-1-half" src="~/Content/img/comm2.png" style="max-width: 100px;" />
                        </div>
                        <div class="col-10">
                            <a>
                                <h4 class="font-weight-bold">Commissioner 2</h4>
                            </a>
                            <div class="mt-2">
                                <ul class="list-unstyled">
                                    <li class="comment-date">
                                        <i class="fa fa-clock-o"></i> 05/10/2015
                                    </li>
                                </ul>
                            </div>
                            <p class="grey-text">
                                Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                                consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat
                                nulla pariatur. Excepteur sint occaecat cupidatat non proident.
                            </p>
                        </div>
                    </div>
                    <div class="row pt-2">
                        <div class="col-2">
                            <img class="avatar rounded-circle z-depth-1-half" src="~/Content/img/comm1.png" style="max-width: 100px;" />
                        </div>
                        <div class="col-10">
                            <a>
                                <h4 class="font-weight-bold">Commissioner 1</h4>
                            </a>
                            <div class="mt-2">
                                <ul class="list-unstyled">
                                    <li class="comment-date">
                                        <i class="fa fa-clock-o"></i> 05/10/2015
                                    </li>
                                </ul>
                            </div>
                            <p class="grey-text">
                                Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                                consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat
                                nulla pariatur. Excepteur sint occaecat cupidatat non proident.
                            </p>
                        </div>
                    </div>
                    <div class="row pt-2">
                        <div class="col-2">
                            <img class="avatar rounded-circle z-depth-1-half" src="~/Content/img/comm3.png" style="max-width: 100px;" />
                        </div>
                        <div class="col-10">
                            <a>
                                <h4 class="font-weight-bold">Commissioner 3</h4>
                            </a>
                            <div class="mt-2">
                                <ul class="list-unstyled">
                                    <li class="comment-date">
                                        <i class="fa fa-clock-o"></i> 05/10/2015
                                    </li>
                                </ul>
                            </div>
                            <p class="grey-text">
                                Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                                consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat
                                nulla pariatur. Excepteur sint occaecat cupidatat non proident.
                            </p>
                        </div>
                    </div>

                    <hr />

                    <section class="mb-4 mx-2">
                        <!--Leave a reply form-->
                        <div class="reply-form">
                            <h3 class="section-heading h3 pt-5">Leave a reply </h3>
                            <!--Third row-->
                            <div class="row">
                                <!--Image column-->
                                <div class="col-sm-2 col-12">
                                    <img src="~/Content/img/comm1.png" alt="user" class="img-fluid avatar rounded-circle z-depth-2" style="max-width: 100px;">
                                </div>
                                <!--/.Image column-->
                                <!--Content column-->
                                <div class="col-sm-10 col-12">
                                    <!--Grid row-->
                                    <div class="row">

                                        <div class="col-12 mt-1">
                                            <div class="form-group basic-textarea rounded-corners shadow-textarea">

                                                <textarea class="form-control" id="exampleFormControlTextarea6" rows="5" placeholder="Your message..."></textarea>
                                            </div>

                                            <div class="text-right">
                                                <button class="btn btn-primary btn-sm waves-effect waves-light">Submit</button>
                                            </div>

                                        </div>

                                    </div>
                                    <!--Grid row-->

                                </div>

                            </div>
                            <!--/.Leave a reply form-->
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

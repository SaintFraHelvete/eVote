
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="pt-2">Name of voting process</h2>
<hr />
<div class="row text-center pt-2">
    <div class="col">
        <i class="fa fa-5x fa-envelope-open indigo-text pb-2"></i><br/>
        <span class="font-weight-bold">Status:</span> Open
    </div>
    <div class="col">
        <i class="fa fa-5x fa-exclamation-triangle orange-text pb-2"></i><br />
        <span class="font-weight-bold">Deadline:</span> 01/01/2018
    </div>
    <div class="col">
        <a href="@Url.Action("Vote", "Processes")" alt="Vote">
            <i class="fa fa-5x fa-calendar-check-o green-text pb-2" aria-hidden="true"></i><br />
            <span class="font-weight-bold">Vote now!</span>
        </a>
    </div>
    <div class="col">
        <a href="@Url.Action("Docs", "Processes")" alt="Docs">
            <i class="fa fa-5x fa-file blue-grey-text pb-2"></i><br />
            <span class="font-weight-bold">Docs</span>
        </a>
    </div>
</div>
<hr/>
<div class="row pt-2">
    <div class="col text-center">
        <span class="font-weight-bold">Votes collected</span> <br/>
        <i class="fa fa-flag yellow-text"></i> &nbsp; <i class="fa fa-check green-text"></i> Commissioner 1 <br />
        <i class="fa fa-flag-o orange-text"></i> &nbsp; <i class="fa fa-close red-text"></i> Commissioner 2<br />
        <i class="fa fa-flag-checkered red-text"></i> &nbsp; <i class="fa fa-check green-text"></i> Commissioner 3<br />
        <i class="fa fa-flag blue-grey-text"></i> &nbsp; <i class="fa fa-close red-text"></i> Commissioner 4<br />
        <i class="fa fa-flag-o blue-text"></i> &nbsp; <i class="fa fa-check green-text"></i> Commissioner 5<br />
    </div>
    <div class="col text-center">
        <br /><br />
        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">3 votes approved</div>
            1 Vote disapproved
        </div>
        <text class="pull-left">Started on: 01/01/2018</text><text class="pull-right">Ending on: 01/10/2018</text>
        <br /><br />
        <div class="row text-center">
            <div class="col">
                <i class="fa fa-lg fa-flag"></i><br />
                Country 1
            </div>
            <div class="col">
                <i class="fa fa-lg fa-flag-o"></i><br />
                Country 2
            </div>
            <div class="col">
                <i class="fa fa-lg fa-flag-checkered"></i><br />
                Country 3
            </div>
        </div>
    </div>
</div>
<hr />
